{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018 
    },
    "parser": "babel-eslint",
    "rules": {
        "func-names": ["warn", "never" ],
        "quotes": ["warn", "double"],
        "prefer-arrow-callback": ["warn"],
        "strict": ["warn" , "global"],
        "linebreak-style": ["off", "unix"]
        
    }
}