{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "func-names": ["warn", "never" ],
        "quotes": ["warn", "double"],
        "prefer-arrow-callback": ["warn", {"allowNamedFunction":false}]
    }
}