<div class="container" id="user-page">
    <div class="card mx-auto mt-5">
        <div class="card-body">
            <h5 class="card-title">
                Hello, {{ username }}.
            </h5>
            <p class="card-text">
                You own {{ recipesCount }} recipe{{#greaterThan recipesCount 1}}s{{/greaterThan}}, and favourited {{favsCount}} recipe{{#greaterThan favsCount 1}}s{{/greaterThan}}.
                <div class="row mx-md-n5">
                    <div class="col px-md-5">
                        <div class="p-3 border bg-light">
                            <div class="list-group">
                                <h5>
                                    Authored recipes:&nbsp;
                                    {{#if recipes}}
                                        <a href="/favourite">View all</a>
                                    {{/if}}
                                </h5>
                                {{#each recipes }}
                                    {{> recipe_title }}
                                {{else}}
                                    <p>You have not written any recipe yet.</p>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="col px-md-5">
                        <div class="p-3 border bg-light">
                            <div class="list-group">
                                <h5>
                                    Favourite recipes:&nbsp;
                                    {{#if favourites}}
                                        <a href="/favourite">View all</a>
                                    {{/if}}
                                </h5>
                                {{#each favourites }}
                                    {{> recipe_title }}
                                {{else}}
                                    <p>You have no favourited recipe.</p>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </p>
        </div>
    </div>
</div>