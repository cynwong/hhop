<div class="container" id="add-page">
  <section class="login-content">
    <div id="newRecipe">
        <h2>
          Add a new recipe
        </h2>
        {{!-- <form method="POST" id="newRecipe"> --}}
          <div class="form-group">
            <label for="newTitle">
              Title
            </label>
            <input
              type="text"
              class="form-input"
              id="newTitle"
              placeholder="Enter Recipe Name"
            />
          </div>

          <div class="form-group">
            <div id="alert-text"></div>
            <label for="newIngredients">
              Ingredients
            </label>
            <textarea
              class="form-input"
              id="newIngredients"
              rows="5"
              placeholder="Enter Recipe Ingredients"
            ></textarea>
          </div>

          <div class="form-group">
            <label for="newMethod">
              Method
            </label>
            <textarea
              class="form-input"
              id="newMethod"
              rows="6"
              placeholder="Enter steps"
            ></textarea>
          </div>

          <div class="form-group">
            <label for="newCredit">
              Credit (if any)
            </label>
            <input type="text" class="form-input" id="newCredit" />
          </div>

          <div class="form-group">
            <label for="newSource">
              Source (if any)
            </label>
            <input type="text" class="form-input" id="newSource" />
          </div>

          <div class="form-group">
            <label for="newImage">
             Add an image address
            </label>
            <input type="text" class="form-input" id="newImage" />
          </div>

{{!-- going with image urls --- drop dataset  --}}

          <button
            type="submit_Recipe"
            class="btn btn-warning"
            name="submit"
            id="submit"
          >
            Submit
          </button>
      {{!--   </form> --}}
      </div>
    </div>
  </section>
</div>

