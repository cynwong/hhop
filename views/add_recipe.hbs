<div>
  <h2>
    Add a new recipe
  </h2>
  <form action="/" method="POST" id ="newRecipe">
    <div class="form-group">
      <label for="newTitle">Title</label>
      <input type="text" class="form-control" id="newTitle" placeholder="Enter Recipe Name"/>
    </div>

    <div class="form-group" >
      <label for="newIngredients"> Ingredients</label>
      <textarea class="form-control" id="newIngredients"  rows="5" placeholder="Enter Recipe Ingredients"></textarea>
    </div>

    <div class="form-group">
      <label for="newMethod">Method</label>
      <textarea class="form-control" id="newMethod" rows="6" placeholder="Enter steps"></textarea>
    </div>

    <div class="form-group" >
      <label for="newCredit">Credit (if any) </label>
      <input type="text" class="form-control" id="newCredit"/>
    </div>

    <div class="form-group">
      <label for="newSource"> Source (if any) </label>
      <input type="text" class="form-control" id="newSource"  />
    </div>

    <div class="form-group">
      <label for="newImage"> Select Image</label>
      <input type="file" class="form-control-file"  id="newImage" />
    </div>

    <button type="submit_Recipe" class="btn btn-primary" name="submit" id="submit">
      Submit
    </button>
  </form>
</div>

<script src="/assets/js/new_recipe.js" type="text/javascript"></script>