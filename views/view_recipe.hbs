<div class="row no-gutters bg-light position-relative">
  <div class="col-md-6 mb-md-0 p-md-4">
    <img src="{{ photo }}" class="w-100" alt="...">
  </div>
  <div id="alertText"></div>
  <div class="col-md-6 position-static p-4 pl-md-0">
    <h4 class="mt-0 ml-1 mb-3">
      {{ recipeTitle }}
    </h4>
    <h6 class="ml-1 card-subtitle mb-2 text-muted">
      Created by
      <a href="#">
        {{ author }}
      </a> {{ created }}. Active {{ updated }}.
    </h6>
    <h6 class="ml-1 card-subtitle mb-2 text-muted">
      {{favCount}} 
      {{#greaterThan favCount 1}}
        people
      {{else}}
        person
      {{/greaterThan}} liked this recipe.
    </h6>

    <div class="card" style="width: 15rem;">
      {{ ingredients }}
    </div>
    <p class="mt-3 mb-3 ml-1">
      {{ method }}
    </p>
    <div>
      <a href="/recipe/:id" class="mr-auto p-2 bd-highlight" id="delete" >Delete</a>
      <a href="/recipe/edit" class="p-2 bd-highlight" id = "edit">Edit</a>
    </div>
    <div class="mt-3 d-flex bd-highlight mb-3">
      <a href="#" class="mr-auto p-2 bd-highlight">Previous</a>
      <a href="#" class="p-2 bd-highlight">Next</a>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="/assets/js/edit-delete_recipe.js" type="text/javascript"></script>