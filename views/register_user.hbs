<section class="signup">
    <div class="container">
        <div class="signup-content">
            <form method="POST" id="signup-form" class="signup-form">
                <h2 class="form-title">Create account</h2>
                <div id="alert-text"></div>
                <div class="form-group">
                    <input type="text" class="form-input" name="name" id="user-name" placeholder="Your Name" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-input" name="email" id="user-email" placeholder="Your Email" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" name="password" id="user-pwd" placeholder="Password" />
                    <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="rePassword" id="re-pwd"
                        placeholder="Repeat your password" />
                </div>
                <div class="form-group">
                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all
                        statements in <a href="#" class="term-service">Terms of service</a></label>
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" id="sign-up" class="form-submit" value="Sign up" />
                </div>
            </form>
            <p>
                Have already an account ? <a href="/user/login" class="link-login">Login here</a>
            </p>
        </div>
    </div>
</section>
<script src="/assets/js/register.js" type="text/javascript"></script>