<div class="container" id="add-page">
  <section class="login-content">
    <div id="updateRecipe">

      <h2>Update your recipe</h2>

      <div id="alertText"></div>

      <div class="form-group">
        <label for="updateTitle"> Title </label>
        <input type="text" class="form-input" id="updateTitle"  placeholder="Update Recipe Name" />
      </div>

      <div class="form-group">
        <label for="updateIngredients">  Ingredients  </label>
        <textarea  class="form-input"  id="updateIngredients"  rows="5"  placeholder="Update Recipe Ingredients" ></textarea>
      </div>

      <div class="form-group">
        <label for="updateMethod">  Method   </label>
        <textarea class="form-input" id="updateMethod" rows="6"  placeholder="Update steps"  ></textarea>
      </div>

      <div class="form-group">
        <label for="updateCredit">  Credit (if any) </label>
        <input type="text" class="form-input" id="updateCredit" />
      </div>

      <div class="form-group">
        <label for="updateSource">   Source (if any)  </label>
        <input type="text" class="form-input" id="updateSource" />
      </div>

      <div class="form-group">
        <label for="updateImage"> Add an image URL address </label>
        <input type="text" class="form-input" id="updateImage" />
      </div>
      
      <button  type="save_Recipe" class="btn btn-warning"  name="save"  id="save" >
        Save
      </button>
    </div>
  </section>
</div>

