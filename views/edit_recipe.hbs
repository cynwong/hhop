<div class="container" id="add-page">
  <section class="login-content">
    <div id="updateRecipe">

      <h2>Update your recipe</h2>

      <div id="alert-text"></div>
      <input type="hidden" id="updateId"  value="{{id}}" />
      <div class="form-group">
        <label for="updateTitle"> Title </label>
        <input type="text" class="form-input" id="updateTitle"  value="{{recipeTitle}}" />
      </div>

      <div class="form-group">
        <label for="updateIngredients">  Ingredients  </label>
        <textarea  class="form-input"  id="updateIngredients"  rows="5">{{ingredients}}</textarea>
      </div>

      <div class="form-group">
        <label for="updateMethod">  Method   </label>
        <textarea class="form-input" id="updateMethod" rows="6">{{method}}</textarea>
      </div>

      <div class="form-group">
        <label for="updateCredit">  Credit (if any) </label>
        <input type="text" class="form-input" id="updateCredit" value="{{creditTo}}" />
      </div>

      <div class="form-group">
        <label for="updateSource">   Source (if any)  </label>
        <input type="text" class="form-input" id="updateSource" value="{{source}}" />
      </div>

      <div class="form-group">
        <label for="updateImage"> Add an image URL address </label>
        <input type="text" class="form-input" id="updateImage" value="{{photo}}" />
      </div>
      
      <button  type="save_Recipe" class="btn btn-warning"  name="save"  id="btn-save" >
        Save
      </button>
    </div>
  </section>
</div>

<script src="/assets/js/edit_recipe.js" type="text/javascript"></script>