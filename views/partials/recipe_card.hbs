<div class="col-md-4">

  <div class="card mb-4 shadow">
    <img class="card-img-top" src="{{recipe.photo}}" alt="Recipe">
    <div class="card-body">
      <h5 class="card-title">
        {{recipe.title}}
      </h5>
      <small class="text-muted">{{recipe.favCount}} Favourites</small>
      </p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a href="/recipe/{{recipe.id}}" class="btn btn-sm btn-outline-secondary btn-view-recipe">View</a>
          <a class="btn btn-sm btn-outline-secondary btn-unfavourite">
            <i class="fas fa-heart"></i></a>
            {{!--<i class="far fa-heart"></i> for unliked  --}}
        </div>
      </div>
    </div>
  </div>
</div>