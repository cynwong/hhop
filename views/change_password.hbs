<section class="login">
    <div class="container">
        <div id="frm-change-password" class="login-content">
            <h2 class="form-title">Change password</h2>
            <div id="alert-text"></div>
            <div class="form-group">
                <input type="password" class="form-input" name="password" id="password" placeholder="Your Password" />
                <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-input" name="re-password" id="re-password" placeholder="Confirm Your Password" />
                <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="submit" id="btn-save" class="form-submit" value="Save" />
            </div>
        </div>
    </div>
</section>
<script src="/assets/js/password.js" type="text/javascript"></script>