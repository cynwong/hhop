<section class="login">
    <div class="container">
        <div class="login-content">
            <form method="GET" id="login-form" class="login-form">
                <h2 class="form-title">Log in</h2>
                <div id="alert-text"></div>
                <div class="form-group">
                    <div id="alertText"></div>
                    <input type="email" class="form-input" name="email" id="email" placeholder="Enter Your Email" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="password" id="password"
                        placeholder="Enter Your Password" />
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" id="btn-login" class="form-submit" value="Log in" />
                </div>
            </form>
            <p class="text-center">
                Do not have an account ? <a href="/user/register" class="link-login">Sign up here</a>
            </p>
        </div>
    </div>
</section>
<script src="/assets/js/login.js" type="text/javascript"></script>