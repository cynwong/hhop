<div class="main">

    <section class="login">
        {{!-- <img src="images/signup-bg.jpg" alt=""> --}}
        <div class="container">
            <div class="login-content">
                <form method="GET" id="login-form" class="login-form">
                    <h2 class="form-title">Log in</h2>
                    <div class="form-group">
                        <div id="alertText"></div>
                        Email: <input type="email" class="form-input" name="email" id="email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        Password: <input type="text" class="form-input" name="password" id="password" placeholder="Password" />
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Sign In" />
                    </div>
                </form>
                <p class="login">
                    Do not have an account ? <a href="/user/register" class="link-login">Sign up here</a>
                </p>
            </div>
        </div>
    </section>

</div>
<script src="/assets/js/login.js" type="text/javascript"></script>